<% if activity.trackable and activity.owner_id == current_user.id %>
  <li>The post <em>"<%= activity.trackable.comment %>"</em> was deleted by you <%= time_ago_in_words(activity.created_at) %> ago.</li>
<% elsif activity.owner_id == current_user.id %>
    <li>A post was deleted by <%= current_user.name %> <%= time_ago_in_words(activity.created_at) %> ago.</li>
<% end %>
