<% @posts.each do |post| %>
  <div class="post-box">
    <h2><%= post.title %></h2>
    <p><%= post.entry %></p>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<br />
<div class="actions">
  <%= link_to 'New Post', new_post_path %>
  <%= link_to 'Admin', admin_path %>
  <%= link_to 'Recent activities', activities_path %>
</div>
